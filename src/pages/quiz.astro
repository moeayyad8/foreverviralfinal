---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Logos from "@components/logos.astro";
import Picture from "astro/components/Picture.astro";
import fvmlogo from "assets/fvmlogo.png";

const QuizQuestions = [
    {
        question: "What is your biggest challenge?",
        answer1:[
            "Finding new customers",
             ],
        question2: "How many employees?",
        answer2:[
            "0-5",
            
        ]
        }
    ];

---

<Layout title="Quiz">
    <Container>

    <div class="pt-24">
       <div class="shadow-xl bg-white rounded-lg p-8">
        <!-- 
        <Picture src={ fvmlogo } alt="Quiz" class="w-500 h-50 mx-auto" />
       -->


        <h1 class="text-4xl pt-12 text-center font-bold lg:tracking-tight">
            Find the best plan of action for your business in minutes.
        </h1>
        <p class="text-lg text-center pt-4 pb-10 lg:tracking-tight">
            Answer a few questions about your business and we'll recommend the best plan for you.
        </p>
      

<div class="w-2/3 mx-auto">
    <div class="flex items-center justify-center space-x-4">
        <!-- Step 1 -->
        <div class="flex items-center p-2 space-x-2">
          <div class="w-6 h-6 flex items-center justify-center border-2 border-purple-500 rounded-full">
            <div class="w-3 h-3 bg-purple-500 rounded-full"> </div>
          </div>
          <span class="text-purple-500 font-medium">1. Complete form</span>
        </div>
      
        <!-- Line -->
        <div class="flex-grow h-1 bg-gray-300"></div>
        
        <!-- Step 2 -->
        <div class="flex items-center space-x-2 p-2">
          <div class="w-6 h-6 flex items-center justify-center border-2 border-gray-300 rounded-full"></div>
          <span class="text-gray-500 font-medium">Get unique quote</span>
        </div>
      
        <!-- Line -->
        <div class="flex-grow h-1 bg-gray-300"></div>
      
        <!-- Step 3 -->
        <div class="flex items-center space-x-2 p-2 ">
          <div class="w-6 h-6 flex items-center justify-center border-2 border-gray-300 rounded-full"></div>
          <span class="text-gray-500 font-medium">Save money!</span>
        </div>
      </div>
</div>
      
        
      <!-- Quiz Questions -->
       <div class="w-2/3 mx-auto">
        <p class="text-center text-3xl font-semibold text-slate-800 mt-4">
            {QuizQuestions[0].question}
        </p>
        <div>
        
            <div class="flex-row">
                <div class="flex flex-col items-center space-y-4 mt-2">
                    <p class="w-full text-center outline outline-2 p-3 outline-black rounded-lg text-2xl font-semibold text-slate-800 hover:shadow-lg hover:bg-slate-100 cursor-pointer">
                    {QuizQuestions[0].answer1}
                    </p>
                    <p class="w-full text-center outline outline-2 outline-black rounded-lg text-2xl font-semibold text-slate-800 mx-auto">
                    <span class="inline-block w-1/3">11-50</span>
                    </p>
                    <p class="w-full text-center outline outline-2 outline-black rounded-lg text-2xl font-semibold text-slate-800 mx-auto">
                    <span class="inline-block w-1/3">51-100</span>
                    </p>
                </div>
            </div>
        </div>
        <Logos />  
       </div>
       
        </div>        
        </div>
     
      
    </Container>
</Layout>