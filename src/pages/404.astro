---
import Container from "@components/container.astro";
import Link from "@components/ui/link.astro";
import Layout from "@layouts/Layout.astro";
---

<Layout title="404 Not Found">
  <Container>
    <div class="min-h-[calc(100vh-16rem)] flex items-center justify-center">
      <div class="mt-16 text-center">
        <h1 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">Oops!</h1>
        <p class="text-lg mt-4 text-slate-600">This service is not available in your region yet.</p>
        <div class="pt-8">
        </div>
        <Link href="/" class="">Go back to home</Link>
      </div>
    </div>
  </Container>
</Layout>
