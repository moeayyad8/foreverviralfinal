---
import { Picture } from "astro:assets";
import heroImage from "assets/heroimg.png";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon/components";
import heroImagetwo from "@assets/heroopt2.png"
import Numbers from "./numbers.astro";
import herofvmhome from "@assets/fvmherohome.png"
---

<main
  class="grid lg:grid-cols-2 place-items-center pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={herofvmhome}
      alt="Forever Viral Media Video Content"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  
  <div> 
    <p class="text-lg text-slate-600 max-w-xl">
  Top Rated Marketing Agency.
  </p>
    <h1
      class="text-4xl lg:text-5xl xl:text-6xl font-bold lg:tracking-tight xl:tracking-tighter">
     Open More Locations <span class="text-yellow-500 "> Without the Risk. </span>
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      We are a full-service marketing agency that specializes in helping minority owned businesses grow their audience, brand, and revenue. Our team of experts work with you to grow your business exponentially. 
    </p>
 <Numbers/>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="/contact"
       
        target="_blank"
        class="flex gap-1 font-bold items-center justify-center"
        rel="noopener">
        <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24"><path fill="currentColor" d="M17 22v-3h-3v-2h3v-3h2v3h3v2h-3v3zM3 20V4h3V2h2v2h6V2h2v2h3v8.1q-.5-.075-1-.075t-1 .075V10H5v8h7q0 .5.075 1t.275 1z"></path></svg>

         Apply Now
      </Link>

   
    
    </div>
    
  </div>
  
</main>
