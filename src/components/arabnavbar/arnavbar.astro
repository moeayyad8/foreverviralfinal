---
import Container from "@components/container.astro";
import Link from "@components/ui/link.astro";
import Dropdown from "./ardropdown.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
import { Picture } from "astro:assets";
import fvmLogo from "assets/forevervirallogo.svg";

const menuitems = [
  {
    title: "الخدمات",
    path: "#",
    children: [
      { title: "الأتمتة", path: "/الأتمتة" },
      { title: "الحملات التسويقية", path: "/الحملات-الإعلانية" },
      { title: "إنشاء المحتوى", path: "/المحتوى" },
    ],
  },
  /*
  {
    title: "Creators",
    path: "/pricing",
    children: [
      { title: "Creator Management", path: "#" },
      { title: "Consulting", path: "/404" },
      { title: "Tiktok LIVE Management", path: "/404" },
    ],
  },

 
  {
    title: "النتائج",
    path: "/blog",
  },
 
  {
    title: "الدراسات",
    path: "/studies",
  },
    */
  {
    title: "حول",
    path: "/حول",
  },
  {
    title: "الاتصال",
    path: "/الاتصال",
  },
];
---

<Container>
  <header class="flex flex-col lg:flex-row justify-between items-center my-5">
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <a href="/دول-الخليج" class="text-lg"
          >
          <Picture
      src={fvmLogo}
      alt="Astronaut in the air"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
        </a>
        <div class="block lg:hidden">
          <MenuIcon class="w-4 h-4 text-gray-800" />
        </div>
      </div>
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex flex-col lg:flex-row lg:gap-3">
          {
            menuitems.map((item, index) => (
              <>
                {item.children && (
                  <Dropdown
                    title={item.title}
                    children={item.children}
                    lastItem={index === menuitems.length - 1}
                  />
                )}

                {!item.children && (
                  <li>
                    <a
                      href={item.path}
                      class="flex lg:px-3 py-2 items-center text-gray-600 hover:text-gray-900">
                      <span> {item.title}</span>
                      {item.badge && (
                        <span class="ml-1 px-2 py-0.5 text-[10px] animate-pulse font-semibold uppercase text-white bg-indigo-600 rounded-full">
                          New
                        </span>
                      )}
                    </a>
                  </li>
                )}
              </>
            ))
          }
        </ul>
        <div class="lg:hidden flex items-center mt-3 gap-4">
          <Dropdown
          title="Languages"
          children={[
            { title: "Arabic", path: "/دول-الخليج" },
            { title: "English", path: "/" },
          ]}
          lastItem={true}
        />
        </div>
      </MenuItems>
    </Astronav>
    <div>
      <div class="hidden lg:flex items-center gap-4">
        <Dropdown
        title="Languages"
        children={[
          { title: "Arabic", path: "/دول-الخليج" },
          { title: "English", path: "/" },
        ]}
        lastItem={true}
      />
      </div>
    </div>
  </header>
</Container>
